<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.18.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
    <script src="/Scripts/Noodles/Noodles.js"></script>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    @MvcMiniProfiler.MiniProfiler.RenderIncludes() 
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span
                    class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </a><a class="brand" href="/">My MVC Application</a>
                <div class="nav-collapse">
                    <ul class="nav">
                        <li>
                            @Html.ActionLink("Home", "Index", "Home", new { Area = "" }, null)
                        </li>
                        <li>
                            @Html.ActionLink("About", "About", "Home", new { Area = "" }, null)
                        </li>
                    </ul>
                    <ul class="nav pull-right">
                        @Html.Partial("_LogOnPartial")
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        @Html.Flash()
        <section id="main">
                @RenderBody()
            </section>
        <footer>
                @Html.ActionLink("Contact us", "Contact", "Home", new { Area = "" }, null)
            </footer>
    </div>
</body>
</html>
