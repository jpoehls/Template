@using Project1.Web.Controllers
@using Project1.Web.Models

@{
    ViewBag.Title = "Reset Password";
}

<h2>Reset Password</h2>
<p>
    Use the form below to reset your password. 
</p>

@using (var form = Html.FormForAction((AccountController ctlr, string a, ResetPasswordModel b) => ctlr.ResetPassword(a, b)))
{
    form.DisplayName = "Reset Password";
    form.Render();
}
