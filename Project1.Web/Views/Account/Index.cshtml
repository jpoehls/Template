@using Project1.Web.Controllers
@using Project1.Web.Models

@{
    ViewBag.Title = "Account details";
}

<h2>@(ViewBag.Title)</h2>
<p>
    Use the form below to update your account details. 
</p>

@using (var form = Html.FormForAction((AccountController ctlr, AccountModel b) => ctlr.Index(b)))
{
    form.DisplayName = "Update";
    form.Render();
}

@Html.ActionLink("Change password", "ChangePassword")